	"databases":{
		"sms_admin_table":{
			"columns":{
				"midx":{
					"type":"int",
					"length":11,
					"comment":"관리자"
				}
			},
			"indexes":{
				"midx":"primary_key"
			},
			"comment":"SMS모듈접근권한관리"
		},
		"sms_send_table":{
			"columns":{
				"idx":{
